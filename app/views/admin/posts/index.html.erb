
<div style="margin: 20px;">
     <h1>投稿一覧</h1>
</div>
<div class="container">
    <div class="row"> 
        <table class="table table-striped">
                <thead>
                    <tr>
                        <th><%="投稿id"%></th>
                        <th><%="ユーザー画像"%></th>
                        <th><%="投稿者名"%></th>
                        <th><%="目的地"%></th>
                        <th><%=" "%></th>
                        <th><%=" "%></th>
                    </tr>
                </thead>
                <tbody>
                    <%@posts.each do |post|%>
                                <tr>
                                        <td><%=post.id%></td>
                                        <%if post.end_user.profile_image.present? %>
                                            <td><%= image_tag post.end_user.profile_image, size: "100x100" %></td>
                                        <%else%>
                                            <td><%= image_tag 'no_image', size: "100x100" %></td>
                                        <%end%>
                                        <td><%=post.end_user.nickname%></td>
                                        <td><%=post.destination%></td>
                                        <td><%= link_to "表示",  admin_post_path(post.id), class: 'btn btn-sm btn-success' %></td>
                                        <td><%= link_to "削除",  admin_post_path(post.id),method: :delete , class: 'btn btn-sm btn-danger'%></td>
                                </tr>
                    <%end%>
                </tbody>
            </p>
        </table>
        <%= paginate @posts%>
    </div>
</div>
