                            <th><%=link_to "削除", admin_tag_path(tag.id), method: :delete , class: 'btn btn-sm btn-danger'%></th>
                        </tr>
                    </tbody>
            
            <%end%>
            </table>
            <%=link_to "タグ検索へ",admin_search_path%></th>
            <%= paginate @tags%>
        </div>
    </div>
</div>