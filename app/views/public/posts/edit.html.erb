<h1>投稿編集</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: @post, url:  public_post_path(@post.id),local:true,method: :patch) do |f| %>
    <%= f.text_field :destination%>
    <%= f.text_field :body%>
    <%= f.text_field :address%>
    <%= f.file_field :img_urls, accept: "image/*" ,multiple: true, accept: "image/jpeg,image/gif,image/png", data: { images_target: "select", action: "change->images#selectImages" } %>%>
    <% if @post.img_urls.attached?%>
      <%@post.img_urls.each do|img_url|%>
        <%=image_tag img_url, size: "100x100" %>
      <%end%>
    <%end%>
    <%= f.submit '変更を保存',class: 'btn-success' %>
<%end%>
