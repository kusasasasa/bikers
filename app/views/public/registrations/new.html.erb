<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class = "field">
    <%= f.label :nickname, "ユーザー名" %><br />
    <%= f.text_field :nickname,  size: 20, autofocus: true, placeholder: "最大10文字", maxlength: 10 %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class = "field">
    <%= f.label :age, "年齢" %><br />
    <%= f.text_field :age,  size: 3, autofocus: true,  maxlength: 3 %>
  </div>
  
  <div class = "field">
    <%= f.label :bike_type, "車種" %><br />
    <%= f.text_field :bike_type,  size: 5, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :profile_image%>
    <%= f.file_field :profile_image %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
